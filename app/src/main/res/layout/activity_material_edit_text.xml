<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--app:met_baseColor="#0056d3"  字体颜色-->
    <!--app:met_primaryColor="#982360" 输入框颜色-->

    <!--app:met_floatingLabel="highlight"-->
    <!--app:met_floatingLabelText="用户名"-->
    <!--必须要有上面两个元素搭配才能使用-->


    <!--app:met_singleLineEllipsis="true"  当内容输入超过屏幕宽度,底部会出现...省略号-->

    <!--设置警告色:-->
    <!--app:met_errorColor="#000000"-->
    <!--设置最多字数和最小字数-->
    <!--app:met_minCharacters="5"-->
    <!--app:met_maxCharacters="10"-->

    <!--app:met_hideUnderline="true"  隐藏下划线-->

    <!--app:met_clearButton= “true”清除按钮-->

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/material_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_clearButton="true"
        app:met_hideUnderline="true"
        app:met_errorColor="#ff0000"
        app:met_maxCharacters="5"
        app:met_singleLineEllipsis="true"
        app:met_baseColor="#0056d3"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="用户名"
        app:met_primaryColor="#982360" />

    <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
        android:id="@+id/material_auto_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.rengwuxian.materialedittext.MaterialMultiAutoCompleteTextView
        android:id="@+id/material_multi_auto_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>