<?xml version="1.0" encoding="utf-8"?>

<com.rambler.swipetoload.ClassicLoadMoreFooterView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/load_more_footer_height_classic">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/tvLoadMore"
            style="@android:style/Widget.ProgressBar.Small.Inverse"
            />

        <TextView
            android:id="@+id/tvLoadMore"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="上拉加载更多"
            android:textColor="#c6c6c6" />
    </RelativeLayout>
</com.rambler.swipetoload.ClassicLoadMoreFooterView>