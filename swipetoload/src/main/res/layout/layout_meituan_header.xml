<?xml version="1.0" encoding="utf-8"?>
<com.rambler.swipetoload.MeiTuanRefreshHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/refresh_header_height_meituan"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/ivRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/mg_refresh_mt_change_to_release_refresh" />

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/mg_refresh_mt_refreshing" />
    </RelativeLayout>
</com.rambler.swipetoload.MeiTuanRefreshHeaderView>